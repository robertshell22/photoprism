{#
/**
 * @file
 *
 * Available variables:
 * - raw_image: Array of data about the image straight from the PhotoPrism API.
 * - image: PhotoPrism thumb.
 * - name: The name of the thumb.
 *
 * @ingroup themeable
 */
#}
{%- set attributes = attributes.addClass('photoprism-thumb') %}
<figure{{ attributes }}>
  {{ image }}
  <figcaption>{{ name }}</figcaption>
</figure>
